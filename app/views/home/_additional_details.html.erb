
<div id="reqd_fld_err"></div>

<div class="well">
<h3> Additional Information </h3>

<%= form_tag('/verify_first_stage_info', method: :post, :id => 'additional_info_frm') do %>
    <div class="form-group row">
        <div class="col-md-6">
            <label for="first_name">First Name</label>
            <%= text_field_tag 'user[first_name]', nil, class: "form-control" %>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6">
            <label for="last_name">Last Name</label>
            <%= text_field_tag 'user[last_name]', nil, class: "form-control" %>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6" style="width: 70%;">
            <label for="exiternal_account">DOB</label>
            <%= date_select("user", "dob",  start_year: 1900, prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }) %>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6">
            <label for="acc_type">Legal Entity Type</label>
            <select id="user_legal_entity_type" name="user[legal_entity_type]" style="width: 70%;">
                <option value="company">Company</option>
                <option value="individual">Individual</option>
            </select>
        </div>
    </div>  

    <%= submit_tag "Submit and Continue", class: "btn btn-primary", id: "add_details" %>       
<% end %>
</div>

<script>
    $("#add_details").on("click",(event) => {
        event.preventDefault();
        $(this).prop("disabled", false);
        verify_params(...first_stage_parameters());
    });
</script>