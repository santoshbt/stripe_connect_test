<% if @success_flag %>    
    $("#bank_fld_err").css("display", "none") 
    $("#bank_fld_success").css("display", "block")
    $("#additional_details").css("display", "block")
<% else %>  
    $("#bank_fld_err").css("display", "block") 
    $("#bank_fld_success").css("display", "none")
    $("#additional_details").css("display", "none")
<% end %>                                                    

