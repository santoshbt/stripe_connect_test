<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Email</th>
      <th>Amount</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @verified_users.each_with_index do |user, index| %>
        <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= user.full_name %></td>
            <td><%= user.email %></td>
            <td style="width:20%">
                 <div class="col-md-6 amount">
                    <%= text_field_tag 'amount', nil, class: "form-control", id: "amount_#{user.id}" %>
                </div>                    
            </td>
            <td><%= link_to "Pay", "javascript:void(0)" , id: "pay_#{user.id}", onclick: "payme(this)" %></td>
        </tr>
    <% end %>
  </tbody>
</table>

