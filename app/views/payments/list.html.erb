<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @verified_users.each_with_index do |user, index| %>
        <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= user.full_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to "Pay", pay_payment_path(id: user.id) , id: "pay_#{user.id}" %></td>
        </tr>
    <% end %>
  </tbody>
</table>

