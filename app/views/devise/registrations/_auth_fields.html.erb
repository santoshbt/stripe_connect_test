<div class="form-group row">
        <div class="col-md-6">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
        </div>
</div>

<div class="form-group row">
        <div class="col-md-6">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
       </div>
</div>

<div class="form-group row">
        <div class="col-md-6">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
</div>

<% if current_action == "edit" && ( devise_mapping.confirmable? && resource.pending_reconfirmation? ) %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

<div class="form-group row">
    <div class="col-md-6">
        <%= f.label :password %> <br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
    </div>
</div>

<div class="form-group row">
    <div class="col-md-6">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control" %>
    </div>
</div>

<% if current_action == "edit" %>
    <div class="form-group row">
         <div class="col-md-6">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control"  %>
        </div>
    </div>
<% end %>

<div class="form-group row">
    <div class="col-md-6">
        <label for="type">Country</label><br />
        <%= f.select :country, options_for_select([["USA", "US"]]), {}, {class: "custom_dropdown country_select"} %>
    </div>
</div>

<div class="form-group row">
    <div class="col-md-6">
        <label for="type">Login As</label><br />
        <%= f.select :type, options_for_select([["Doctor", "doctor"], ["Patient", "patient"]]), {}, {class: "custom_dropdown user_type"} %>
    </div>
</div>